@model AssetsAttributes


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Asset</h2>
    </div>

    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="AssetName">Asset Name</label>
                <input type="text" class="form-control mb-3" asp-for="AssetName" placeholder="Enter Name">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Owner">Owner</label>
                <input type="text" class="form-control mb-3" asp-for="Owner" placeholder="Enter Owner">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Manufacturer">Manufacturer</label>
                <input type="text" class="form-control mb-3" asp-for="Manufacturer" placeholder="Enter Manufacturer">
            </div>
              <div class="form-group col-md-6">
                <label asp-for="Model">Model</label>
                <input type="text" class="form-control mb-3" asp-for="Model" placeholder="Enter Model">
            </div>
        </div>

          <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Version">Version</label>
                <input type="text" class="form-control mb-3" asp-for="Version" placeholder="Enter Version">
               
            </div>
              <div class="form-group col-md-6">
                <label asp-for="Processor">Processor</label>
                <input type="text" class="form-control mb-3" asp-for="Processor" placeholder="Enter Processor">
               
            </div>
        </div>

          <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="InstallesMomory">InstallesMomory</label>
                <input type="text" class="form-control mb-3" asp-for="InstallesMomory" placeholder="Enter InstallesMomory">
             
            </div>
              <div class="form-group col-md-6">
                <label asp-for="Driver">Driver</label>
                <input type="text" class="form-control mb-3" asp-for="Driver" placeholder="Enter Driver">
              
            </div>
        </div>

         <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Year">Year</label>
                <input type="text" class="form-control mb-3" asp-for="Year" placeholder="Enter Year">
             
            </div>
           
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Assets" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


